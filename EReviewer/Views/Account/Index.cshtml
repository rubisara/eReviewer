@model IEnumerable<UserListViewModel>
@{
    ViewData["Title"] = "User List";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-default">Add User</a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                <a asp-controller="Manage" asp-action="Index" asp-route-id="@item.Id" class="btn btn-default">Edit</a>
                                <a asp-controller="Manage" asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-default">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>